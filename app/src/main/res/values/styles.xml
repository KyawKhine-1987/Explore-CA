<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--MainActivity theme-->
    <style name="ExploreCATheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.ExploreCA.NoTitle</item>
    </style>

    <!--MainActivity action bar style-->
    <style name="ActionBar.Solid.ExploreCA.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_exploreca</item>
    </style>
    <!--<style name="AppBaseTheme" parent="android:Theme.Light"></style>
    <style name="AppCopyTheme" parent="AppBaseTheme"></style>-->
  </resources>
